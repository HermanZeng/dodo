<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entity">

    <class name="CommentLong" table="comment_longbookreview">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="reviewId" type="java.lang.Long" column="review_id" />
        <property name="userId" type="java.lang.String" column="user" />
        <property name="content" type="java.lang.String" column="content" />
        <property name="likeCnt" type="java.lang.Integer" column="like_cnt" />
        <property name="date" type="java.lang.String" column="date" />

    </class>

</hibernate-mapping>

